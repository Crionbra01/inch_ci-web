.topbar
  %h1
    = @project.name
    = link_to image_tag("GitHub-Mark-32px.png", :class => "github-logo"), @project.source_code_url, :target => '_blank'

  .pull-left
    %p.description
      = @project.description

  .pull-right
    .btn-group
      %button.btn.btn-default.btn-sm.dropdown-toggle{:type => "button", :"data-toggle" => "dropdown"}
        %em branch:
        %strong= @branch.name
        %span.caret
      %ul.dropdown-menu.dropdown-menu-right
        - @project.branches.each do |branch|
          %li{:class => branch == @branch ? :active : nil}= link_to_branch branch
        %li.divider
        %li= link_to t('projects.topbar.update_info_link'), project_update_info_path(@project, @branch.name), :method => :post
    = link_to t('projects.topbar.rebuild_link'), project_rebuild_path(@project, @branch.name), :method => :post, :class => 'btn btn-default btn-sm', :"data-toggle" => 'tooltip', :title => t('projects.topbar.rebuild_link_tooltip')
    = link_to t('projects.topbar.feedback_link'), github_issue_url(:project => @project), :target => '_blank', :class => 'btn btn-success btn-sm', :"data-toggle" => 'tooltip', :title => t('projects.topbar.feedback_link_tooltip')
  .clearfix

  = render "webhook_hint"
