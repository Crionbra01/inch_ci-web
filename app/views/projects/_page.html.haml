.repo-wrapper
  .repo-card
    - if @revision.nil?
      = render "topbar"
      - if @pending_build
        = render "wait_for_build", :build => @pending_build
      - else
        - if @project.build_on_travis?
          / pass
        - else
          %p.start_build
            %em= t('projects.start_build.info')
            = icon('level-up')

    - else
      = render "badge_selector"

      = render "topbar"
      - if @pending_build
        = render "wait_for_build", :build => @pending_build
      - else
        = render "stats"
        = render "subnavi"

        = yield
