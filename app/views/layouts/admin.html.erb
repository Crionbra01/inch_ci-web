<!doctype html>
<html lang="en">
<head>
  <title>[ADMIN] <%= @project ? "#{@project.name} - " : nil %> <%= t("shared.title") %></title>
  <%= stylesheet_link_tag    "admin/admin", media: "all" %>
  <%= javascript_include_tag "admin/admin" %>

  <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.5.1.css">

  <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
  <script src="http://cdn.oesmith.co.uk/morris-0.5.1.min.js"></script>

  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
  <div id="page-wrapper" class="active">

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
      <ul class="sidebar">
        <li id="toggle-sidebar" class="sidebar-main">
          <a href="#">
            Dashboard
            <span class="menu-icon fa fa-exchange"></span>
          </a>
        </li>
        <li class="sidebar-title"><span>NAVIGATION</span></li>
        <li class="sidebar-list">
          <a href="<%= admin_overview_path %>">Overview <span class="menu-icon fa fa-tachometer"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="<%= admin_builds_path %>">Builds <span class="menu-icon fa fa-tasks"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="<%= admin_projects_path %>">Projects <span class="menu-icon fa fa-truck"></span></a>
        </li>
        <li class="sidebar-title separator"><span>QUICK LINKS</span></li>
        <li class="sidebar-list">
          <a href="/dashboard" target="_blank">Dashboard <span class="menu-icon fa fa-external-link"></span></a>
        </li>
      </ul>
      <div class="sidebar-footer text-center">
        <div class="col-xs-4">
          <a href="/" target="_blank">
            Home
          </a>
        </div>
        <div class="col-xs-4">
          <a href="https://github.com/inch-ci" target="_blank">
            GitHub
          </a>
        </div>
        <div class="col-xs-4">
          <a href="https://github.com/inch-ci/inch_ci-web/issues" target="_blank">
            Tickets
          </a>
        </div>
      </div>
    </div>

    <!-- End Sidebar -->

    <div id="content-wrapper">
      <div class="page-content">

        <!-- Header Bar -->

        <div class="row header">
          <div class="col-xs-12">
            <div class="meta pull-left">
              <div class="page">
                Dashboard
              </div>
              <div class="breadcrumb-links">
                Home / Dashboard
              </div>
            </div>
            <div class="meta pull-right">
              <%= render "admin/projects/form_new" %>
              </div>
            <div class="user pull-right">
              <div class="item dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="fa fa-bell-o"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li class="dropdown-header">
                    Notifications
                  </li>
                  <li class="divider"></li>
                  <li>
                    <a href="#">Server Down!</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- End Header Bar -->

        <!-- Main Content -->



        <%= yield %>


        <!-- End Main Content -->

      </div><!-- End Page Content -->
    </div><!-- End Content Wrapper -->
  </div><!-- End Page Wrapper -->
</body>
</html>
